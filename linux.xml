<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="copy_created_jar_file_into_linux_dir" name="Create distribute directory for OS Linux 32,64 Bit Architecture">
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="/root/workspace"/>
    <property name="dir.dist" value="${dir.buildfile}/dist"/>
    <property name="dir.jarfile" value="${dir.dist}/jar"/>
    <property name="dir.linux" value="${dir.dist}/linux"/>
    <property name="dir.native.library" value="${dir.buildfile}/library"/>
    <property name="jar.filename" value="SimpleNetworkMonitor.jar"/>
    <property name="classpath" value="${dir.buildfile}"/>
    <target name="copy_created_jar_file_into_linux_dir" depends="create_linux_dir">
      <copy file="${dir.jarfile}/${jar.filename}" todir="${dir.linux}"/>
    </target>
    <target name="create_linux_dir" depends="clean">
      <mkdir dir="${dir.linux}"/>
      <mkdir dir="${dir.linux}/dependency"/>
      <mkdir dir="${dir.linux}/library/lin32"/>
      <mkdir dir="${dir.linux}/library/lin64"/>
      <mkdir dir="${dir.linux}/properties"/>
      <mkdir dir="${dir.linux}/logs"/>
      <copy file="${dir.workspace}/SimpleNetworkMonitor/bash/SimpleNetworkMonitor.sh" todir="${dir.linux}"/>
      <copy todir="${dir.linux}/properties">
        <fileset dir="${dir.workspace}/SimpleNetworkMonitor/properties/"/>
      </copy>
      <copy todir="${dir.linux}/library/lin32">
        <fileset dir="${dir.workspace}/SimpleNetworkMonitor/library/lin32"/>
      </copy>
      <copy todir="${dir.linux}/library/lin64">
        <fileset dir="${dir.workspace}/SimpleNetworkMonitor/library/lin64"/>
      </copy> 
      <copy todir="${dir.linux}/dependency">
        <fileset dir="${dir.workspace}/SimpleNetworkMonitor/lib">
          <include name="jfreechart-1.0.19.jar"/>        
          <include name="jnetpcap.jar"/>
          <include name="jcommon-1.0.23.jar"/>
          <include name="slf4j-api-1.8.0-alpha2.jar"/>
          <include name="slf4j-log4j12-1.8.0-alpha2.jar"/>
          <include name="log4j-1.2.17.jar"/>
       </fileset>  
      </copy>
    </target>
    <target name="clean">
      <delete dir="${dir.linux}"/>
    </target>
</project>
